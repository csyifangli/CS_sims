function [PSF,OTF]=PSFinF(N,xvals,amplitudes,visualize)
% 2D PSF for non-discrete values

assert(length(xvals)==length(amplitudes); 

C=ones(1,N);
T=N;
omega0=2*pi/T;

k=[1:N]


for i=1:length(xvals)
t0=20.66
C=C.*exp(-i*omega0.*k.*t0)

f=linspace(-63,64,128)
end

if visualize ==1
figure(1);
subplot(221)
hold on 
stem(real(C));
stem(imag(C));
hold off; 
subplot(222)
stem(f,ifftshift(ifft(C)))

end

end
